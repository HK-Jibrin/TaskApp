@model TaskEditViewModel

@{
    ViewBag.Title = "Task Submision";
}
<h1>Assign Task</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
          <input hidden asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"> </div>
            <div class="form-group row">
                <label asp-for="StaffEmail" class="col-sm-2 col-form-label"></label>
                <select asp-items="@Model.StaffEmailList" asp-for="StaffEmail" class="form-control">
                    <option value="0">Select Email</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="RecomTask"></label>
                <input asp-for="RecomTask" class="form-control" />
                <span asp-validation-for="RecomTask" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="Submision" class="col-sm-2 col-form-label">Upload Task</label>
                <div class="col-sm-10">
                    @*<div class="custom-file">*@
                    <input multiple asp-for="Submision" type="file" class="form-control " />
                    <lebel class="custom-file-label">Click here to change image</lebel>
                    @*</div>*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-controller="admin" asp-action="details" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
@model HomeViewModel

@{
    ViewBag.Title = "Staff Details";
    var photoPath = "~/assets/images/" + Model.Photo ?? "adminuser.png";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Email</h1>
                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" width="10" />
                    <h3>ID: @Model.Id</h3>
                    <h3>Address: @Model.Address</h3>
                    <h3>Department:@Model.Department</h3>
                    <h3>Date: @Model.Date</h3>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
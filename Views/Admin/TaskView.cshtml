@model IEnumerable<RegistCom>
@{
    ViewBag.Title = "Task List";
}

<div class="card-deck">
    @if (Model.Any())

        foreach (var adminModel in Model)
        {

            <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                <div class="card-header">
                    <h2>Email:@adminModel.StaffEmail</h2>
                    <h3>Task :@adminModel.RecomTask</h3>
                </div>
                <div class="text-center">
                    <a asp-controller="admin" asp-action="taskDetails" asp-route-id="@adminModel.Id" class="btn btn-primary m-1">View</a>
                    <a asp-action="taskedit" asp-controller="admin" asp-route-id="@adminModel.Id" class="btn btn-primary m-1 ">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    else
    {
        <div>no records</div>
    }
</div>
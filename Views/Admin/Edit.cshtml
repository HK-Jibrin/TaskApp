@model AdminEditViewModel

@{
    ViewBag.Title = "Edit Admin";
   var photoPath = "~/assets/images/" + Model.Picture ?? "adminuser.png";
}

    <form enctype="multipart/form-data" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <input hidden asp-for="Picture" />
        <div class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label">Full Name</label>
            <div class="col-sm-10">
                <input asp-for="FullName" class="form-control" placeholder="Name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label">Sex</label>
            <select asp-for="Gender" name="gender" id="Gender">
                <option asp-for="Gender" value="0">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
                <input asp-for="Date" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
            <div class="col-sm-10">
                <select asp-for="Department" name="Department" id="Department">
                    <option asp-for="Department" value="0">Select Department</option>
                    <option value="IT">IT</option>
                    <option value="HR">HR</option>
                    <option value="Admin">Admin</option>
                    <option value="Security">Security</option>
                </select>
            </div>
        </div>
        @*<div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
            <div class="col-sm-10">
                <select asp-for="Department" name="Department" id="Department">
                    <option asp-for="Department" value="0">Select Department</option>
                    <option value="IT">IT</option>
                    <option value="HR">HR</option>
                    <option value="Admin">Admin</option>
                    <option value="Security">Security</option>
                </select>
            </div>
        </div>*@
        <div class="form-group row">
            <label asp-for="Speciality" class="col-sm-2 col-form-label">Specialty</label>
            <div class="col-sm-10">
                <input asp-for="Speciality" class="form-control" placeholder="Specialty" />
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Level" class="col-sm-2 col-form-label">Rank</label>
            <div class="col-sm-10">
                <input asp-for="Level" class="form-control" placeholder="Rank" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="MyPictures" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                @*<div class="custom-file">*@
                    <input multiple asp-for="MyPictures" class="form-control " />
                    <lebel class="custom-file-label">Click here to change image</lebel>
                @*</div>*@
            </div>
        </div>
        <div class="form-group row col-sm-4 offset-4">
            <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="admin" asp-action="details" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}

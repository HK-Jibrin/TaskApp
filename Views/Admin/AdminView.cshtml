
@model AdminViewModel

@{
    ViewBag.Title = "Admin";
}
    <form enctype="multipart/form-data" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="FullName" class="form-control" placeholder="Entre your Name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label">Sex</label>
            <select asp-for="Gender" name="gender" id="Gender">
                <option asp-for="Gender" value="0">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label">Birth Date</label>
            <div class="col-sm-10">
                <input type="date" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
                <input asp-for="Age" class="form-control" placeholder="Entre your Age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
            <div class="col-sm-10">
                <select asp-for="Department" name="Department" id="Department">
                    <option asp-for="Department" value="0">Select Department</option>
                    <option value="IT">IT</option>
                    <option value="HR">HR</option>
                    <option value="Admin">Admin</option>
                    <option value="Security">Security</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Speciality" class="col-sm-2 col-form-label">Specialty</label>
            <div class="col-sm-10">
                <input asp-for="Speciality" class="form-control" placeholder="Specialty" />
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Level" class="col-sm-2 col-form-label">Rank</label>
            <div class="col-sm-10">
                <input asp-for="Level" class="form-control" placeholder="Rank" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="MyPictures" class="col-sm-2 col-form-label">Photo</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="MyPictures" type="file">
                    <span asp-validation-for="MyPictures"></span>

                    @*<input multiple asp-for="Photo" class="form-control custom-file-input" />
                    <lebel class="custom-file-label">Choose...</lebel>*@
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">SAVE</button>
            </div>
        </div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
            </script>
        }
    </form>
